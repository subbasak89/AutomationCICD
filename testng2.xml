<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite  name="Ecommerce Application">
	<groups>
		<run>
			<include name = "ErrorHandling"/>
		</run>
	</groups>
	<listeners>
		<listener class-name ="subhrajitbasakacademy.TestComponents.Listeners"/>
	</listeners>
	
  <test thread-count="5" name="Submit Order">
    <classes>
      <class name="subhrajitbasakacademy.TestCases.EcommerceApplicationTest"/>
    </classes>
  </test> <!-- Test -->
  
  <test thread-count="5" name="Error Validation">
    <classes>
      <class name="subhrajitbasakacademy.TestCases.ErrorValidationTest"/>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
